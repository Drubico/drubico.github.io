# ====================================================================================
# ADDITIONAL OPTIMIZATIONS - Optimizaciones adicionales
# ====================================================================================

# Previene hotlinking de imágenes (protege tu ancho de banda)
<IfModule mod_rewrite.c>
    RewriteEngine On
    # Permite tu dominio y Google (para imágenes en búsqueda)
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?diego-rubi\.is-a\.dev [NC]
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?google\. [NC]
    # Bloquea imágenes de ser usadas desde otros sitios
    RewriteRule \.(jpg|jpeg|png|gif|webp|svg)$ - [F,L]
</IfModule>

# UTF-8 encoding
AddDefaultCharset utf-8
<IfModule mod_mime.c>
    AddCharset utf-8 .atom .css .js .json .rss .vtt .webapp .xml
</IfModule>

# Tipos MIME correctos
<IfModule mod_mime.c>
    # JavaScript
    AddType application/javascript js mjs

    # Manifest
    AddType application/manifest+json webmanifest
    AddType application/json json map

    # Media
    AddType image/webp webp
    AddType image/avif avif
    AddType image/svg+xml svg svgz

    # Fuentes
    AddType font/woff woff
    AddType font/woff2 woff2
    AddType font/ttf ttf
    AddType font/otf otf
</IfModule>

# Opciones del directorio
Options -Indexes -MultiViews +FollowSymLinks

# Previene el acceso a archivos ocultos y sensibles
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_URI} "!(^|/)\.well-known/([^./]+./?)+$" [NC]
    RewriteCond %{SCRIPT_FILENAME} -d [OR]
    RewriteCond %{SCRIPT_FILENAME} -f
    RewriteRule "(^|/)\." - [F]
</IfModule>

# Bloquea el acceso a archivos de respaldo y de configuración
<FilesMatch "(^#.*#|\.(bak|conf|dist|fla|in[ci]|log|orig|psd|sh|sql|sw[op])|~)$">
    # Apache 2.2
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>

    # Apache 2.4+
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>
